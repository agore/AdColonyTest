<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="gone">
    <FrameLayout
        android:id="@+id/layout_ad_colony_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:id="@+id/layout_ad_chatter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp">
        <FrameLayout
            android:id="@+id/img_sponsor_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/txt_advertiser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img_sponsor_logo"
            android:text="Sponsor Name"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/txt_advertiser_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_below="@+id/txt_advertiser_name"
            android:layout_toRightOf="@+id/img_sponsor_logo"
            android:text="Sponsor blurb that may span two lines or more. That may span two lines or more."
            android:layout_marginTop="4dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_sponsorship_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans"
            android:textSize="14sp"
            android:text="SPONSORED"
            android:textColor="#ffbbbbbb"
            android:layout_below="@+id/txt_advertiser_blurb"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_sponsor_logo"/>

    </RelativeLayout>

</LinearLayout>