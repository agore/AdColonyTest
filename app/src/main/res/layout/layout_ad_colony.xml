<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sponsor_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/txt_advertiser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img_sponsor_logo"
            android:text="Sponsor Name"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_sponsorship_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans"
            android:textSize="14sp"
            android:text="Sponsored Advertisement"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_sponsor_logo"/>

        <TextView
            android:id="@+id/txt_advertiser_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/img_sponsor_logo"
            android:layout_toRightOf="@+id/img_sponsor_logo"
            android:text="Sponsor blurb that may span two lines or more."
            android:textColor="#000000"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_ad_colony_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

</LinearLayout>